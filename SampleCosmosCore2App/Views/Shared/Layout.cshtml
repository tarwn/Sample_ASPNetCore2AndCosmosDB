
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sample App</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
        }

        .navbar {
            border-bottom: 1px solid #999;
            height: 32px;
        }
        .navbar-left {
            float: left;
            line-height: 28px;
        }
        .navbar-right {
            float: right;
            line-height: 28px;
            list-style-type: none;
            margin: 0px;
        }
        .navbar-right li {
            display: inline-block;
            padding: 0px;
            margin: 0px;
        }
        .box {
            max-width: 300px;
            padding: 1em;
            margin: 1em 0;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .box h2 {
            margin-top: 0;
        }

        .horizantal-line {
        width: 100%;
        text-align: center;
        border-bottom: 1px solid #ddd;
        line-height: 1px;
        margin: 10px 0 20px 0;
        }

        .horizantal-line span {
            background: #FFF;
            padding: 0 10px;
        }
        .form-group {
            margin: 12px 0;
        }
        label {
            display: block;
            font-size: .9em;
            padding-left: .25em;
        }
        .form-control {
            border: 1px solid #ddd;
            padding: 4px;
            border-radius: 4px;
            width: 100%;
        }
        .form-control:focus{
            background-color: #FFFFCC;
        }
        .field-validation-error {
            display: block;
            background-color: #FFCCCC;
            border: 1px solid #880000;
            border-bottom-left-radius: 4px;
            border-bottom-right-radius: 4px;
            padding: .25em 1em;
            color: #880000;
            font-size: .65em;
            margin: 0 2px;
        }


        .validation-summary-errors {
            border: 1px solid #880000;
            background-color: #FFCCCC;
            border-radius: 4px;
            padding: 1em;
            color: #880000;
            font-size: .9em;
            margin-bottom: 1em;
        }
        .validation-summary-errors ul{
            margin: 0;
            padding: 0px;
            list-style-type: none;
        }

        input[type=submit] {
            border: 1px solid #44AA44;
            padding: .5em 2em;
            background-color: #44AA44;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }
        input[type=submit]:hover {
            border: 1px solid #55BB55;
            background-color: #55BB55;
        }
        input[type=submit]:active {
            border: 1px solid #339933;
            background-color: #339933;
        }

        .btn-white {
            border: 1px solid #999;
            padding: .5em 1em;
            background-color: #FFF;
            border-radius: 6px;
            color: #444;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-white:hover {
            background-color: #EEE;
        }

    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">(Sample Logo)</div>
        @await Component.InvokeAsync("LoginStatus")
    </div>
    @RenderBody()
</body>
</html>
